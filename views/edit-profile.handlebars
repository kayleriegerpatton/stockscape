<header>
    {{> private-navbar}}
</header>

<main>
 <div id="profile-portfolio-container" class="d-flex">
    {{!-- Edit Profile Section --}}
  <div id="profile-form-container" class="mx-4 my-5 form-container" style="min-width: 18rem">
    
    <form id="user-profile-form" class="p-3 bg-light rounded">
      <h2 class="mb-3 text-center">Profile</h2>
      <div class="form-group mb-4">
        <label for="username" class="mb-1">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          value={{user.username}}
          required
        /></input>
        <div id="username-error" class="form-text error"></div>
      </div>
      <div class="form-group mb-4">
        <label for="investor-type" class="mb-1">Investor Type</label>
        <select class="form-control" id="investor-type">
          <option>Yolo Life Savings</option>
          <option>Weekend Investor</option>
          <option>Play it safe</option>
          <option>r/WallStreetBets Graduate</option>
          <option>Jamie Dimonhands</option>
        </select>
      </div>
     <div class="form-group mb-4">
        <label for="favourite-company" class="mb-1"
          >Favourite Company</label
        >
        <select class="form-control" id="favourite-company">
          {{#each companies as | company |}}
            {{> select-option parent=../this}}
          {{/each}}
        </select>
      </div>
      <div class="form-group mb-4">
        <label for="user-bio" class="mb-1">About Me</label>
        <textarea class="form-control" id="user-bio" rows="3">{{user.bio}}</textarea>
      </div>
      <div class="d-grid">
          <button type="submit" id={{user.id}} name="save-profile-changes-btn" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
  </div>

{{!-- Portfolio Section --}}
  <div id="portfolio-container" class="mx-4 my-5 p-3 rounded  bg-light">
      <div id="portfolio-header" class="text-center">
          <h2 class="">My Portfolios</h2>
      </div>

      <div id="company-card-container" class="d-flex flex-wrap justify-content-center align-content-center">
        {{#each portfolioInfo}}
        {{> portfolio-companies parent=../this}}
        {{/each}}
      </div>
  </div>
 </div>
</main>
