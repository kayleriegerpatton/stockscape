  <div id="profile-form-container" class="mx-4 my-5 form-container" style="min-width: 18rem">
    
    <form id="user-profile-form" class="p-3 bg-light rounded">
      <h2 class="mb-3">Profile</h2>
      <div class="form-group mb-4">
        <label for="username" class="mb-1">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          value={{user.username}}
          required
        /></input>
      </div>
      <div class="form-group mb-4">
        <label for="investor-type" class="mb-1">Investor Type</label>
