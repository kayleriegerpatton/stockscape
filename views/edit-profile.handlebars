          <option>Weekend Investor</option>
          <option>Play it safe</option>
          <option>r/WallStreetBets Graduate</option>
          <option>Jamie Dimonhands</option>
        </select>
      </div>
      <div class="form-group mb-4">
        <label for="favourite-company" class="mb-1"
          >Favourite Company</label
        >
        <select multiple class="form-control" id="favourite-company">
          <option>$TSLA</option>
          <option>$GOOGL</option>
          <option>$AMZN</option>
          <option>$GME</option>
          <option>$JPM</option>
        </select>
      </div>
      <div class="form-group mb-4">
        <label for="user-bio" class="mb-1">About Me</label>
        <textarea class="form-control" id="user-bio" rows="3">{{user.bio}}</textarea>
      </div>
    <div>
          <button type="submit" id={{user.id}} name="save-profile-changes-btn" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
